<% provide(:title, "Sign up") %>
<%= render 'layouts/header' %>

  <h2 id="page-title">Sign up</h2>
  <%= form_for(@user, url:signup_path) do |form| %>
      <% if @user.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@user.errors.count, "error") %>.
        </div>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :"first name" %><br>
      <%= form.text_field :firstname, class: 'form-control' %>
    </div>

    <div class="form-group">
	   <%= form.label :"last name" %><br>
     <%= form.text_field :lastname, class: 'form-control' %>
    </div>

    <div class="form-check form-check-inline">
      <%= form.radio_button :gender, "male", class: 'form-check-input' %>
      <%= form.label :gender, "Male", class: 'form-check-label' %> 
      <%= form.radio_button :gender, "female", class: 'form-check-input' %>
      <%= form.label :gender, "Female", class: 'form-check-label' %>
    </div>

    <div class="form-group">
      <%= form.label :location %><br>
      <%= form.text_field :location, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.select :role, ["Tutor", "Student"], class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :education_level %><br>
      <%= form.text_field :education_level, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :"email address" %><br>
      <%= form.email_field :username, class: 'form-control' %>
   </div>

    <div class="form-group">
      <%= form.label :password %><br>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "Sign Up", class: 'btn btn-primary' %>
    </div>

      <% end %>
  </body>

</html>
